{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es6",
    "rootDir": "src",
    "outDir": "dist",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "declaration": true,
    "sourceMap": true,
    "inlineSources": true,
    "paths": {
      "*": ["node_modules/*", "src/types/*"],
      "hapi": ["node_modules/typesafe-hapi"],
      "joi": ["node_modules/typesafe-joi"]
    }
  },
  "include": ["src/**/*", "index.d.ts"],
  "exclude": ["node_modules"]
}
